{
	"name": "@yaos-git/run-tui",
	"version": "125.1.1",
	"description": "An interactive terminal UI for running npm scripts concurrently",
	"main": "dist/cli.js",
	"bin": {
		"run-tui": "dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "npm run dev:typescript",
		"dev:typescript": "tsc --watch --noEmit",
		"dev:test": "vitest --watch",
		"build": "node esbuild.config.js",
		"lint": "npm run lint:types && npm run lint:fix && npm run lint:format",
		"lint:check": "biome lint .",
		"lint:fix": "biome check . --write",
		"lint:format": "biome format . --write",
		"lint:types": "tsc --noEmit",
		"test": "vitest run",
		"test:types": "vitest --typecheck --run",
		"test:watch": "vitest --watch",
		"ui:vitest": "vitest --ui --coverage",
		"coverage": "vitest run --coverage",
		"validate": "npm run lint:types && npm run lint:check && npm run test",
		"prepublishOnly": "npm run validate && npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/YAOSGit/run-tui.git"
	},
	"bugs": {
		"url": "https://github.com/YAOSGit/run-tui/issues"
	},
	"homepage": "https://github.com/YAOSGit/run-tui#readme",
	"keywords": [
		"cli",
		"tui",
		"terminal",
		"npm-scripts",
		"concurrently",
		"ink",
		"react"
	],
	"author": "",
	"license": "ISC",
	"type": "module",
	"dependencies": {
		"chalk": "^5.6.2",
		"commander": "^14.0.2",
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@inkjs/ui": "^2.0.0",
		"ink": "^6.5.1",
		"react": "^19.2.3",
		"@biomejs/biome": "^2.3.8",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^25.0.1",
		"@types/react": "^19.2.7",
		"@types/uuid": "^10.0.0",
		"esbuild": "^0.27.1",
		"ink-testing-library": "^4.0.0",
		"jsdom": "^27.3.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	}
}
