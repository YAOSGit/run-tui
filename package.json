{
	"name": "@yaos-git/run-tui",
	"version": "126.0.0",
	"description": "An interactive terminal UI for running npm scripts concurrently",
	"main": "dist/cli.js",
	"bin": {
		"run-tui": "dist/cli.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"dev": "run-tui -r \"^dev:\"",
		"dev:typescript": "tsgo --watch --noEmit -p tsconfig.app.json",
		"dev:test": "vitest --watch",
		"build": "node esbuild.config.js",
		"lint": "npm run lint:types && npm run lint:fix && npm run lint:format && npm run lint:audit",
		"lint:check": "biome lint .",
		"lint:fix": "biome check . --write",
		"lint:format": "biome format . --write",
		"lint:types": "tsgo --noEmit -p tsconfig.app.json",
		"lint:audit": "npm audit",
		"test": "npm run test:unit && npm run test:react && npm run test:types && npm run test:e2e",
		"test:e2e": "npm run build && vitest run -c vitest.e2e.config.ts",
		"test:unit": "vitest run -c vitest.unit.config.ts",
		"test:react": "vitest run -c vitest.react.config.ts",
		"test:types": "vitest run -c vitest.type.config.ts",
		"ui:vitest": "vitest --ui --coverage",
		"ui:vitest:unit": "vitest --ui --coverage -c vitest.unit.config.ts",
		"ui:vitest:react": "vitest --ui --coverage -c vitest.react.config.ts",
		"ui:vitest:types": "vitest --ui --coverage -c vitest.type.config.ts",
		"coverage": "vitest run --coverage",
		"coverage:unit": "vitest run --coverage -c vitest.unit.config.ts",
		"coverage:react": "vitest run --coverage -c vitest.react.config.ts",
		"coverage:types": "vitest run --coverage -c vitest.type.config.ts",
		"prepublishOnly": "npm run lint:types && npm run lint:check && npm run test:e2e && npm run test:unit && npm run test:react && npm run lint:audit && npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/YAOSGit/run-tui.git"
	},
	"bugs": {
		"url": "https://github.com/YAOSGit/run-tui/issues"
	},
	"homepage": "https://github.com/YAOSGit/run-tui#readme",
	"keywords": [
		"cli",
		"tui",
		"terminal",
		"npm-scripts",
		"concurrently",
		"ink",
		"react"
	],
	"author": "Ygor de Paula",
	"email": "ygorh.de.paula@gmail.com",
	"url": "https://github.com/YAOSGit/run-tui",
	"license": "ISC",
	"type": "module",
	"dependencies": {
		"chalk": "^5.6.2",
		"commander": "^14.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"@inkjs/ui": "^2.0.0",
		"@testing-library/dom": "^10.4.1",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^25.0.1",
		"@types/react": "^19.2.7",
		"@typescript/native-preview": "^7.0.0-dev.20251216",
		"@vitest/coverage-v8": "^4.0.15",
		"@yaos-git/run-tui": "^125.2.0",
		"esbuild": "^0.27.1",
		"happy-dom": "^20.0.11",
		"ink": "^6.5.1",
		"ink-testing-library": "^4.0.0",
		"jsdom": "^27.3.0",
		"node-pty": "^1.0.0",
		"react": "^19.2.3",
		"strip-ansi": "^7.1.2",
		"typescript": "^5.9.3",
		"vitest": "^4.0.15"
	}
}