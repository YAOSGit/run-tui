# asciinema configuration for run-tui demos
# Place this in ~/.config/asciinema/config or use ASCIINEMA_CONFIG env var

[record]
# Limit recorded terminal size
cols = 80
rows = 24

# Idle time limit (seconds) - caps delays between keystrokes
idle_time_limit = 2

# Environment variables to capture
env = TERM,SHELL

[play]
# Playback speed (1.0 = normal)
speed = 1.0

# Idle time limit during playback
idle_time_limit = 2
